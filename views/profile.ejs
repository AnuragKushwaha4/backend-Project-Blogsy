<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= user.name %> · Blogsy</title>

  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            brand: ['Pacifico'],
            ui: ['Inter']
          },
          colors: {
            primary: '#1D9BF0'
          }
        }
      }
    }
  </script>
</head>

<body class="bg-gradient-to-br from-[#0B0F19] to-[#020617] text-white font-ui min-h-screen">

<!-- NAVBAR -->
<header class="sticky top-0 z-50 backdrop-blur bg-black/30 border-b border-white/10">
  <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
    <h1 class="text-3xl font-brand text-primary">Blogsy</h1>
    <div class="flex gap-4 items-center">
      <a href="/first" class="text-zinc-400 hover:text-primary transition">Home</a>
      <a href="/logout" class="bg-red-500 hover:bg-red-600 px-4 py-2 rounded-xl text-sm transition">
        Logout
      </a>
    </div>
  </div>
</header>

<!-- PROFILE HEADER -->
<section class="max-w-6xl mx-auto px-6 mt-10">
  <div class="flex flex-col md:flex-row gap-8 items-center md:items-start">

    <!-- Avatar -->
    <a href="/change" class="group">
      <img
        src="/images/uploads/<%= user.profileImage %>"
        class="w-28 h-28 md:w-32 md:h-32 rounded-full object-cover
               border-4 border-primary
               group-hover:scale-105 transition duration-300"
      />
    </a>

    <!-- User Info -->
    <div class="flex-1 text-center md:text-left">
      <h2 class="text-2xl md:text-3xl font-semibold"><%= user.name %></h2>
      <p class="text-zinc-400">@<%= user.username %></p>

      <div class="flex justify-center md:justify-start gap-10 mt-4">
        <div class="text-center">
          <h3 class="font-bold text-lg"><%= user.followers.length %></h3>
          <p class="text-zinc-400 text-sm">Followers</p>
        </div>
        <div class="text-center">
          <h3 class="font-bold text-lg"><%= user.followings.length %></h3>
          <p class="text-zinc-400 text-sm">Following</p>
        </div>
      </div>
    </div>

    <!-- FOLLOW BUTTON (FIXED) -->
    <div class="mt-4 md:mt-0">
      <a
        href="/follow/<%= user._id %>"
        class="<%= user.followers.indexOf(user._id) === -1
          ? 'bg-primary text-white'
          : 'border border-primary text-primary' %>
        px-6 py-2 rounded-full font-medium
        transition transform hover:scale-105 active:scale-95">
        <%= user.followers.indexOf(user._id) === -1 ? 'Follow' : 'Following' %>
      </a>
    </div>

  </div>
</section>

<!-- POSTS -->
<section class="max-w-4xl mx-auto px-6 mt-14 pb-20">
  <h3 class="text-2xl font-semibold mb-6"><%= user.name %>'s Posts</h3>

  <% if(user.post.length > 0){ %>
    <% user.post.reverse().forEach((p)=>{ %>

      <div class="mb-6 p-5 bg-white/5 border border-white/10 rounded-2xl
                  backdrop-blur transition
                  hover:border-primary/40 hover:shadow-xl">

        <a href="#" class="text-primary font-medium hover:underline">
          @<%= user.username %>
        </a>

        <p class="mt-3 text-zinc-200 leading-relaxed break-words">
          <%= p.content %>
        </p>

        <div class="flex justify-between items-center mt-4 text-sm">

          <a href="/like/<%= p._id %>"
             class="flex items-center gap-2 text-primary
                    hover:scale-105 transition active:scale-95">
            <span class="<%= p.likes.indexOf(user._id)!==-1 ? 'text-red-500' : '' %>">
              ❤️
            </span>
            <%= p.likes.length %>
            <%= p.likes.indexOf(user._id)===-1 ? 'Like' : 'Liked' %>
          </a>

          <% if(String(p.user) === String(user._id)){ %>
            <a href="/edit/<%= p._id %>"
               class="text-zinc-400 hover:text-white transition">
              Edit
            </a>
          <% } %>

        </div>
      </div>

    <% }) %>
  <% } else { %>
    <p class="text-zinc-500">No posts yet.</p>
  <% } %>
</section>

</body>
</html>
