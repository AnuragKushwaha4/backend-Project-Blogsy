<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home ¬∑ Blogsy</title>

  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            brand: ['Pacifico'],
            ui: ['Inter']
          },
          colors: {
            primary: '#1D9BF0'
          }
        }
      }
    }
  </script>
</head>

<body class="bg-gradient-to-br from-[#0B0F19] to-[#020617] text-white font-ui min-h-screen">

<!-- NAVBAR -->
<header class="sticky top-0 z-50 backdrop-blur bg-black/30 border-b border-white/10">
  <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
    <h1 class="text-3xl font-brand text-primary">Blogsy</h1>
    <div class="flex gap-4 items-center">
      <a href="/profile" class="text-zinc-400 hover:text-primary transition">Profile</a>
      <a href="/logout" class="bg-red-500 hover:bg-red-600 px-4 py-2 rounded-xl text-sm transition">
        Logout
      </a>
    </div>
  </div>
</header>

<!-- MAIN -->
<main class="max-w-4xl mx-auto px-6 pt-8 pb-20">

  <!-- Greeting -->
  <div class="mb-8">
    <h1 class="text-2xl font-semibold">Hello üëã</h1>
    <p class="text-zinc-400 text-lg">
      <%= user.name %>
    </p>
  </div>

  <!-- CREATE POST -->
  <section class="mb-12 bg-white/5 border border-white/10 rounded-2xl p-6 backdrop-blur">
    <h2 class="text-xl font-semibold mb-3">Create Post</h2>

    <form action="/post1" method="post">
      <textarea
        name="content"
        rows="3"
        placeholder="What's on your mind?"
        class="w-full resize-none bg-transparent
               border border-white/10 rounded-xl
               px-4 py-3 outline-none
               focus:border-primary transition"
        required></textarea>

      <div class="flex justify-end mt-3">
        <button
          type="submit"
          class="bg-primary hover:bg-blue-600
                 px-6 py-2 rounded-full
                 font-medium transition
                 active:scale-95">
          Post
        </button>
      </div>
    </form>
  </section>

  <!-- POSTS FEED -->
  <section>
    <h2 class="text-2xl font-semibold mb-6">Posts</h2>

    <% if(posts.length > 0){ %>
      <% posts.reverse().forEach((val)=>{ %>

        <div class="mb-6 p-5 bg-white/5 border border-white/10
                    rounded-2xl backdrop-blur
                    hover:border-primary/40 transition">

          <!-- Post Header -->
          <div class="flex justify-between items-center mb-3">
            <a href="/viewing/<%= val.user.email %>"
               class="text-primary font-medium hover:underline">
              @<%= val.user.username %>
            </a>

            <% if (String(user._id) !== String(val.user._id)) { %>
              <a
                href="/follow1/<%= val.user._id %>"
                class="<%= val.user.followers.indexOf(user._id)===-1
                  ? 'bg-primary text-white'
                  : 'border border-primary text-primary' %>
                px-4 py-1.5 rounded-full text-sm
                transition hover:scale-105">
                <%= val.user.followers.indexOf(user._id)===-1 ? "Follow" : "Following" %>
              </a>
            <% } %>
          </div>

          <!-- Content -->
          <p class="text-zinc-200 leading-relaxed break-words">
            <%= val.content %>
          </p>

          <!-- Actions -->
          <div class="flex justify-between items-center mt-4 text-sm">

            <a href="/like1/<%= val._id %>"
               class="flex items-center gap-2 text-primary
                      hover:scale-105 transition active:scale-95">
              <span class="<%= val.likes.indexOf(user._id)!==-1 ? 'text-red-500' : '' %>">
                ‚ù§Ô∏è
              </span>
              <%= val.likes.length %>
              <%= val.likes.indexOf(user._id)===-1 ? 'Like' : 'Liked' %>
            </a>

            <% if(String(val.user._id) === String(user._id)){ %>
              <a href="/edit/<%= val._id %>"
                 class="text-zinc-400 hover:text-white transition">
                Edit
              </a>
            <% } %>

          </div>
        </div>

      <% }) %>
    <% } else { %>
      <p class="text-zinc-500">No posts yet.</p>
    <% } %>

  </section>
</main>

</body>
</html>
